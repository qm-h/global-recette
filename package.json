{
    "name": "webapp-devops",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "build": "npm run clean && npm run build:prod",
        "clean": "npm run clean:server && npm run clean:client",
        "clean:server": "npm run clean --prefix server",
        "clean:client": "npm run clean --prefix client",
        "build:prod": "npm run build:prod:server && npm run build:prod:client",
        "build:prod:client": "npm run build --prefix client && cp -r \"./client/build\" ./server/build/client",
        "build:prod:server": "npm run build --prefix server",
        "client:dev": "npm start --prefix client",
        "server:dev": "npm run dev --prefix server",
        "test": "jest",
        "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
        "start": "npm run build && npm run server && npm run clean:client & npm run clean:server",
        "server": "npm start --prefix server",
        "lint-staged": "lint-staged",
        "pq": "pretty-quick",
        "install:all": "npm install && npm run install:dependencies --prefix server && npm run install:dependencies --prefix client"
    },
    "lint-staged": {
        "**/*.{ts,tsx}": [
            "eslint --fix",
            "pretty-quick --staged"
        ],
        "**/*.{md,css}": "pretty-quick --staged"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "-": "0.0.1",
        "axios": "0.27.2",
        "concurrently": "7.1.0",
        "cookie-parser": "1.4.6",
        "crypto-hash": "2.0.1",
        "mysql": "2.18.1"
    },
    "devDependencies": {
        "@babel/preset-env": "7.18.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.12",
        "@types/jest": "^28.1.1",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "babel-jest": "28.1.1",
        "eslint": "8.15.0",
        "eslint-plugin-react": "^7.29.4",
        "husky": "8.0.1",
        "jest": "28.1.1",
        "lint-staged": "12.4.1",
        "prettier": "2.6.2",
        "pretty-quick": "3.1.3",
        "rimraf": "3.0.2",
        "ts-jest": "28.0.4"
    }
}
